<h1><%= t('.study_record_show_page') %></h1>
<div class="uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-3@l" uk-grid>
	<div class="uk-width-2-3@m">
		<div class="uk-card uk-card-default uk-card-body">
      <a href="https://twitter.com/intent/tweet?text=【<%= @study_record.title %>】の復習が完了しました！%0a&url=http://study-support-app.jp/" class="twitter-share-button" data-size="large" data-lang="ja" onClick="window.open(encodeURI(decodeURI(this.href)), 'tweetwindow', 'width=650, height=470, personalbar=0, toolbar=0, scrollbars=1, sizable=1'); return false;" rel="nofollow"><i class="fab fa-twitter fa-2x post_show_twitter"></i>ツイッターで共有する</a>
      <p>
        <strong><%= t('.category') %>:</strong>
        <%= @study_record.category.name %>
      </p>
      <p>
        <strong><%= t('.title') %>:</strong>
        <%= @study_record.title %>
      </p>
      <p>
        <strong><%= t('.content') %>:</strong>
        <%= @study_record.content %>
      </p>
      <p>
        <strong><%= t('.study_cycle') %>:</strong>
        <%= @study_record.study_cycle %>
      </p>
      <p>
        <strong><%= t('.comprehension') %>:</strong>
        <%= @study_record.comprehension %>
      </p>
      <p>
        <strong><%= t('.created_at') %>:</strong>
        <%= @study_record.created_at.strftime('%Y/%m/%d %H:%M') %>
      </p>
      <p>
        <strong><%= t('.review_count') %>:</strong>
        <%= @study_record.review_count %>
      </p>
      <%= render partial: 'checked_form', locals: { study_record: @study_record, study_timing: @study_timing, timing_result: @timing_result } %>
      <div class="uk-button-group">
        <button class="uk-button uk-button-default"><%= link_to t('.destroy'), user_study_record_path(user_id: current_user.id, id: @study_record.id), method: :delete, data: { confirm: '本当によろしいですか?' } %></button>
        <button class="uk-button uk-button-default"><%= link_to t('.back'), user_completes_path(current_user) %></button>
      </div>
		</div>
	</div>
</div>