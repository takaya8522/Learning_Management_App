<h1 class="uk-heading-line"><span><%= t('.completed_study_record_index_page') %></span></h1>
<div class="uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-3@l" uk-grid>
  <div class="uk-width-1-1">
    <div class="uk-card uk-card-default uk-card-body">
      <table class="uk-table uk-table-divider uk-table-responsive">
        <thead>
          <tr>
            <th><%= t('.category') %></th>
            <th><%= t('.title') %></th>
            <th><%= t('.content') %></th>
            <th><%= t('.created_at') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @study_records.each do |study_record| %>
            <tr>
              <td><%= study_record.category.name.truncate(7) %></td>
              <td><%= study_record.title.truncate(10) %></td>
              <td><%= study_record.content.truncate(20) %></td>
              <td><%= study_record.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><button class="uk-button uk-button-default uk-button-small"><%= link_to t('.review_page'), user_complete_path(user_id: current_user.id, id: study_record.id) %></button></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @study_records %>
    </div>
  </div>
</div>
<br>
<div>
  <a uk-icon="icon: arrow-up;ratio: 1.5" class="uk-icon-link uk-icon" href="#top" uk-scroll="">Back to top</a>
</div>
