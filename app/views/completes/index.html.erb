<p id="notice"><%= notice %></p>

<h1><%= t('.completed_study_record_index_page') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.category') %></th>
      <th><%= t('.title') %></th>
      <th><%= t('.content') %></th>
      <th><%= t('.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_records.each do |study_record| %>
      <tr>
        <td><%= study_record.category.name %></td>
        <td><%= study_record.title %></td>
        <td><%= study_record.content %></td>
        <td><%= study_record.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to t('.show'), user_complete_path(user_id: current_user.id, id: study_record.id) %></td>
        <td><%= link_to t('.destroy'), user_complete_path(user_id: current_user.id, id: study_record.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @study_records %>
