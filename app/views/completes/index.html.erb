<h1><%= t('.completed_study_record_index_page') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.category') %></th>
      <th><%= t('.title') %></th>
      <th><%= t('.content') %></th>
      <th><%= t('.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_records.each do |study_record| %>
      <tr>
        <td><%= study_record.category.name %></td>
        <td><%= study_record.title %></td>
        <td><%= study_record.content %></td>
        <td><%= study_record.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><button class="uk-button uk-button-default uk-button-small"><%= link_to t('.review_page'), user_complete_path(user_id: current_user.id, id: study_record.id) %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @study_records %>
