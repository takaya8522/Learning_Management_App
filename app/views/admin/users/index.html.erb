<h1><%= t('.admin_index_page') %></h1>
<div class="uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-3@l" uk-grid>
  <div class="uk-width-1-2@s uk-position-relative">
    <div class="uk-card uk-card-default uk-card-body">
      <table>
        <thead>
          <tr>
            <th><%= t('.user') %></th>
            <th><%= t('.created_at') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= link_to t('.destroy'), admin_user_path(user), method: :delete, data: {confirm: "本当に削除しますか？"} %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
