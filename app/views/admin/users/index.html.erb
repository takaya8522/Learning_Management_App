<h1><%= t('.admin_index_page') %></h1>
<div uk-grid>
  <div class="uk-width-expand@s uk-position-relative">
    <div class="uk-card uk-card-default uk-card-body">
      <table class="uk-table uk-table-divider uk-table-responsive">
        <thead>
          <tr>
            <th><%= t('.user') %></th>
            <th><%= t('.admin') %></th>
            <th><%= t('.created_at') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %>さん</td>
              <td><%= user.admin %></td>
              <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= link_to t('.show'), admin_user_path(user) %>
              <td><%= link_to t('.edit'), edit_admin_user_path(user) %>
              <td><%= link_to t('.destroy'), admin_user_path(user), method: :delete, data: {confirm: "本当に削除しますか？"} %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
