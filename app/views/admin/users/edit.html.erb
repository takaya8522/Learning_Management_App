<h1><%= t('.admin_edit_page') %></h1>
<div class="uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-3@l" uk-grid>
  <div class="uk-width-3-5@s uk-position-relative">
    <div class="uk-card uk-card-default uk-card-body">
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |message| %>
          <script>
            UIkit.notification({message: '<%= message %>', pos: 'top-right'});
          </script>
        <% end %>
      <% end %>
      <%= form_with(model: [:admin, @user], local: true) do |f| %>
        <div class="field uk-margin-small-bottom">
          <%= f.label :name, t('.name')  %><br>
          <%= f.text_field :name, class: "uk-textarea uk-form-width-large" %>
        </div>
        <div class="field uk-margin-small-bottom">
          <%= f.label :email, t('.email') %><br>
          <%= f.email_field :email, class: "uk-textarea uk-form-width-large" %>
        </div>
        <div class="field uk-margin-small-bottom">
          <%= f.label :password, t('.password') %><br>
          <%= f.password_field :password, class: "uk-textarea uk-form-width-large" %>
        </div>
        <div class="field uk-margin-small-bottom">
          <%= f.label :password_confirmation, t('.password_confirmation') %><br>
          <%= f.password_field :password_confirmation, class: "uk-textarea uk-form-width-large" %>
        </div>
        <div class="field uk-margin-small-bottom">
          <%= f.label :admin, t('.admin') %><br>
          <%= f.check_box :admin, { class: 'uk-checkbox' }, "管理者", "一般" %>
        </div>
        <div class="actions  uk-margin-small-bottom">
          <%= f.submit class: "uk-button uk-button-primary uk-button" %>
        </div>
      <% end %>
      <button class="uk-button uk-button-default"><%= link_to t('.back'), admin_users_path %></button>
    </div>
  </div>
</div>