<h1><%= t('.show_page') %></h1>
<div class="uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-3@l" uk-grid>
  <div class="uk-width-1-2@m uk-position-relative">
    <div class="uk-card uk-card-default uk-card-body">
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image.variant(gravity: :center, resize:"640x640^", crop:"640x640+0+0").processed, class: "nav_user_image" %>
      <% else %>
        <%= image_tag "no_image.png", class: "nav_user_image" %>
      <% end %>
      <p><%= t('.name') %> : <%= @user.name %></p>
      <p><%= t('.email') %> : <%= @user.email %></p>
      <button class="uk-button uk-button-default"><%= link_to t('.edit'), edit_user_registration_path %></button>
      <!--ログインしてるユーザーが管理者の場合のみ-->
      <% if current_user.try(:admin?) %>
        <button class="uk-button uk-button-default"><%= link_to '管理者用ページ', admin_users_path, id: "admin_page" %></button>
      <% end %>
    </div>
  </div>
</div>
