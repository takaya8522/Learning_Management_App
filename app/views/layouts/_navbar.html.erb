<%# ログインしている場合としてない場合を指定 %>
<% if user_signed_in? %>
  <nav class="uk-navbar-container uk-margin-large-bottom" uk-navbar>
    <div class="uk-navbar-left">
      <ul class="uk-navbar-nav">
        <%# トップページリンク用ロゴマーグ %>
        <%= link_to root_path, class:"logo" do %>
          <li class="uk-active"><%= image_tag "logo_transparent.png", class: "logo_img" %></li>
        <% end %>
        <li class="uk-active"><%= link_to t('.schedule'), root_path %></li>
        <li class="uk-active">
          <a>学習記録</a>
          <div class="uk-navbar-dropdown">
            <ul class="uk-nav uk-navbar-dropdown-nav">
              <li class="uk-active"><%= link_to t('.study_records_index'), user_study_records_path(current_user) %></li>
              <li class="uk-active"><%= link_to t('.completed_records'), user_completes_path(current_user) %></li>
            </ul>
          </div>
        </li>
        <li class="uk-active"><%= link_to t('.new_record_nav'), new_user_study_record_path(current_user) %></li>
      </ul>
    </div>
    <div class="uk-navbar-right">
      <ul class="uk-navbar-nav">
        <li class="uk-active"><%= link_to t('.my_account'), user_path(current_user) %></li>
        <li class="uk-active"><%= link_to t('.sign_out'), destroy_user_session_path, method: :delete %></li>
        <%# プロファイル画像とユーザー名をクリックした場合のリンク先を指定 %>
        <li class="uk-active">  
          <%= link_to edit_user_registration_path do %>
              <% if current_user.image.attached? %>
                <%= image_tag current_user.image.variant(gravity: :center, resize:"640x640^", crop:"640x640+0+0").processed, class: "nav_user_image" %>
              <% else %>
                <%= image_tag "no_image.png", class: "nav_user_image" %>
              <% end %>
              <%= current_user.name %>さん
          <% end %>
        </li>
        <li>
          <%= link_to root_path do%> 
            <% if current_user.study_records.where(comprehension: false).present? && check_notifications %>
              <li class="fa-stack">
                <i class="far fa-bell fa-lg fa-stack-2x nav-list-item"></i>
                <i class="fa fa-circle fa-stack-1x n-circle nav-list-circle"></i>
              </li>
            <% else %>
              <li>
                <i class="far fa-bell fa-lg nav-list-item" style="font-size: 1.8em;"></i>
              </li>
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
<% else %>
  <nav class="uk-navbar-container" uk-navbar>
    <div class="uk-navbar-left">
      <ul class="uk-navbar-nav">
        <li class="uk-active">
          <%# トップページリンク用ロゴマーグ %>
          <%= link_to root_path, class:"logo" do %>
            <%= image_tag "logo_transparent.png", class: "logo_img" %>
          <% end %>
        </li>
        <li class="uk-active"><%= link_to t('.sign_up'), new_user_registration_path %></li>
        <li class="uk-active"><%= link_to t('.sign_in'), new_user_session_path %></li>
      </ul>
  </nav>
<% end %>