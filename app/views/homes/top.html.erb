<% if user_signed_in? %>
  <div>
    <h2><%= @user.name %>さんの学習記録一覧</h2>
  </div>

  <%= link_to '今日の復習',{:controller=>"homes",:action=>"top",:q=>{:title_cont=>'テスト'}}%>
  <%= link_to '全ての復習',{:controller=>"homes",:action=>"top",:q=>{:title_cont=>''}}%>
  <%= link_to '完了した復習',{:controller=>"homes",:action=>"top",:q=>{:title_cont=>'テスト'}}%>

  <table>
    <thead>
      <tr>
        <th><%= t('.category') %></th>
        <th><%= t('.title') %></th>
        <th><%= t('.content') %></th>
        <th><%= t('.study_cycle') %></th>
        <th><%= t('.comprehension') %></th>
        <th><%= t('.created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @study_records.each do |study_record| %>
        <tr>
          <% study_record.categories.each do |category| %>
            <td><%= category.name %></td>
          <% end %>
          <td><%= study_record.title %></td>
          <td><%= study_record.content %></td>
          <td><%= study_record.study_cycle %></td>
          <td><%= study_record.comprehension %></td>
          <td><%= study_record.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= link_to t('.show'), study_record %></td>
          <td><%= link_to t('.edit'), edit_study_record_path(study_record) %></td>
          <td><%= link_to t('.destroy'), study_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @study_records %>
<% else %>
  <div>
    <h2>Study Support</h2>
    <h4>サイトについての説明文</h4>
  </div>
  <div>
    <%= image_tag 'logo_transparent.png', width: '30%' %>
  </div>
  <div>
    <p>忘却曲線とは？？</p>
    <%= link_to '忘却曲線について', homes_about_path %>
  </div>
  <%= render 'content' %>
<% end %>