<% if user_signed_in? %>
  <div>
    <h2>次の学習予定</h2>
  </div>

  <table>
    <thead>
      <tr>
        <th><%= t('.category') %></th>
        <th><%= t('.title') %></th>
        <th><%= t('.content') %></th>
        <th><%= t('.created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @study_records.each do |study_record| %>
        <tr>
          <td><%= study_record.category.name %></td>
          <td><%= study_record.title %></td>
          <td><%= study_record.content %></td>
          <td><%= study_record.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= link_to t('.study_page'), user_study_record_path(user_id: current_user.id, id: study_record.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @study_records %>
<% else %>
  <div>
    <h2>Study Support</h2>
    <h4>サイトについての説明文</h4>
  </div>
  <div>
    <%= image_tag 'logo_transparent.png', width: '30%' %>
  </div>
  <div>
    <p>忘却曲線とは？？</p>
    <%= link_to '忘却曲線について', homes_about_path %>
  </div>
  <%= render 'content' %>
<% end %>